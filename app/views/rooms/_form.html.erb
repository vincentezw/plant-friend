<%= form_with model: room do |form| %>
  <div class="form-group">
    <%= form.label :name %><br>
    <%= form.text_field :name, class: 'form-control' %>
    <% room.errors.full_messages_for(:name).each do |message| %>
      <p><%= message %></p>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :sun_level, {}, { class: 'form-label' } %><br>
    <%= form.select :sun_level, [['Full sun', 'fullsun'], ['Part sun', 'partsun'], ['Shade', 'shade'], ['Dark', 'dark']],
    {}, { :class => 'form-select' } %>
    <% room.errors.full_messages_for(:sun_level).each do |message| %>
      <p><%= message %></p>
    <% end %>
  </div>

  <div class="form-group">
    <%= link_to "Back", plants_path, class: "btn btn-secondary mt-2 me-2" %> <%= form.submit :class => 'btn btn-primary mt-2' %>
  </div>
<% end %>
