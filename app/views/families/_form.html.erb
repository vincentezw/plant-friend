<%= form_with model: family do |form| %>
  <div class="form-group">
    <%= form.label :name %><br>
    <%= form.text_field :name, class: 'form-control' %>
    <% family.errors.full_messages_for(:name).each do |message| %>
      <p><%= message %></p>
    <% end %>
  </div>
  <div class="form-group">
    <%= form.label :latin_name %><br>
    <%= form.text_field :latin_name, class: 'form-control' %>
    <% family.errors.full_messages_for(:latin_name).each do |message| %>
      <p><%= message %></p>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :preferred_room, {}, { class: 'form-label' } %><br>
    <%= form.select :preferred_room, [['Full sun', 'fullsun'], ['Part sun', 'partsun'], ['Shade', 'shade'], ['Dark', 'dark']],
    {}, { :class => 'form-select' } %>
    <% family.errors.full_messages_for(:preferred_room).each do |message| %>
      <p><%= message %></p>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :watering_frequency, {}, { class: 'form-label' } %><br>
    <%= form.number_field :watering_frequency, in: 1..100, step: 1, class:'form-control' %>
    <% family.errors.full_messages_for(:watering_frequency).each do |message| %>
      <p><%= message %></p>
    <% end %>
  </div>

  <div class="form-group form-check my-2">
    <%= form.check_box :misting, class: 'form-check-input' %>
    <%= form.label :misting, "Likes regular misting", class: 'form-check-label' %>
    <% family.errors.full_messages_for(:misting).each do |message| %>
      <p><%= message %></p>
    <% end %>
  </div>

  <div class="form-group form-check my-2">
    <%= form.check_box :cleaning, class: 'form-check-input' %>
    <%= form.label :cleaning, "Requires regular cleaning", class: 'form-check-label' %>
    <% family.errors.full_messages_for(:cleaning).each do |message| %>
      <p><%= message %></p>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :description %><br>
    <%= form.text_area :description, class: 'form-control' %>
    <% family.errors.full_messages_for(:description).each do |message| %>
      <p><%= message %></p>
    <% end %>
  </div>

  <div class="form-group">
    <%= link_to plants_path, class: "btn btn-secondary mt-2 me-2" do%>
      <%= icon("arrow-left") %> Back
    <% end %>
    <%= form.button :class => 'btn btn-primary mt-2' do %>
      <%= icon("save") %> Save
    <% end %>
  </div>
<% end %>
